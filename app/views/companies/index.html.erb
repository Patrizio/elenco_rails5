
<h1>Listing companies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Mission</th>
    <th></th>
  </tr>

  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.mission %></td>
      <td><%= link_to 'Show', company_path(company) %></td>
      <td><%= link_to 'Edit', edit_company_path(company) %></td>
    </tr>
  <% end %>
</table>
